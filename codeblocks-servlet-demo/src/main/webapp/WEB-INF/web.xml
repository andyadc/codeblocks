<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd "
         metadata-complete="true">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>captchaServet</servlet-name>
        <servlet-class>com.andyadc.codeblocks.captcha.servlet.CaptchaServlet</servlet-class>
        <init-param>
            <param-name>captchaSession</param-name>
            <param-value>_captchaSession</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>captchaServet</servlet-name>
        <url-pattern>/public/captchaServet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
