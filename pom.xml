                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>versions-maven-plugin</artifactId>
                    <version>2.5</version>
                    <configuration>
                        <includes>
                            <include>org.codehaus.plexus:*</include>
                            <include>junit:junit</include>
                        </includes>
                        <excludes>
